<div class="d-flex flex-row-reverse">
  <%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn btn-primary'  %>
</div>
<div class="d-flex flex-wrap">
  <% @cocktails.each do |cocktail| %>
    <div class="card m-3" data-aos="fade-right" style="width: 18rem;">
      <img src="https://source.unsplash.com/600x600/?cocktail" class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text">
          <% cocktail.ingredients.each do |ingredient|%>
            <%= ingredient.name %>,
          <% end %>
        </p>
        <%= link_to 'See Details', cocktail_path(cocktail), class: 'btn btn-secondary'  %>
      </div>
    </div>
  <% end %>
</div>


<script>
  AOS.init();
</script>
